<% if User.any? %>
  <ul>
    <% User.all.each  do |user| %>
      <li>
      <%= user.username %>
      <%= link_to "Edit User", edit_user_path(user.id)%>
      <%= render "/users/destroy", user: user %>
      </li>
    <% end %>
  </ul>
<% else %>
  <div>
    <h3>Sorry, no users created. <%= link_to "Add one!", new_user_path %></h3>
  </div>
<% end %>